<div class="max-w-3xl mx-auto py-16 bg-white min-h-screen px-6 shadow">
  <div class="flex items-center">
    <h1 class="text-2xl font-bold text-gray-900 pb-4 mr-auto">Articles</h1>
    <%= link_to "New Article", new_article_path, class: "no-underline px-4 py-2 rounded bg-white hover:bg-teal-400 cursor-pointer duration-200 text-teal-400 hover:text-white font-bold shadow-md" %>
  </div>

  <p class="text-gray-800 pb-4">
    Our blog has <%= Article.public_count %> articles and counting!
  </p>

  <ul>
    <% @articles.each do |article| %>
      <li>
        <%= link_to article.title, article, class: "text-teal-400 hover:underline no-underline py-2" %>
      </li>
    <% end %>
  </ul>

</div>
