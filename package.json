{
  "devDependencies": {
    "npm-watch": "^0.9.0",
    "windicss": "^2.5.8"
  },

  "watch": {
    "build": {
      "patterns": [
        "app/views"
      ],
      "extensions": ["erb"]
    }
  },

  "scripts": {
    "build": "windicss app/views/**/*.html.erb -mto app/assets/stylesheets/tailwind.css",
    "dev": "npm-watch"
  }
}
